{% extends 'base.html.twig' %}


{% block title %}Produit{% endblock %}

{% block body %}

    <h1 class="adminTitle mb-4">Produit</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{message}}</div>
    {% endfor %}


<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Désignation</th>
                <th>Image</th>
                <th>Famille</th>
                <th>Allergène</th>
                <th>Magasin</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody >
        {% for produit in produits %}
            <tr >
                <td>{{produit.nom}}</td>
                <td>{{produit.designation}}</td>
                <td><img src="/img/products/{{produit.fileName}}" class="sizeAdminProducts" </td>
                <td>{{produit.famille.type}}</td>
                <td>
                {% for allergene in produit.allergene %}
                <p>{{ allergene.type }}</p>
                {% endfor %}
                </td>
                <td>
                {% for magasin in produit.magasin %}
                <p>{{ magasin.nom }}</p>
                {% endfor %}
                </td>
               
                
                <td> <a href="{{path('produit_edit', {id: produit.id})}}" class="btn btn-secondary">Editer</a></td> 
                <td>
                    <form method="POST" class="d-inline-block" method="post" action="{{path('produit_delete', {id: produit.id})}}" onsubmit="return confirm('Cette action ne pourra pas être annulée. Êtes-vous sûr ?');">
                         <input type="hidden" name="_token" value="{{csrf_token('delete' ~ produit.id)}}">
                         <input type="hidden" name="_method" value="DELETE">
                         <button class="btn btn-danger">Supprimer</button>  
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>                
    </table>
</div>   
<div class="container text-center">
        <a  class="btn btn-primary" href="{{ path('produit_new') }}">Créer un nouveau produit</a>
        <a class="btn btn-secondary" href="{{ path('admin_index') }}">Retour au menu</a>
</div>    
{% endblock %}
