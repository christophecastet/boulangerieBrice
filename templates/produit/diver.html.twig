{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="header"></div>
<input type="checkbox" class="openSidebarMenu" id="openSidebarMenu" style="display:none">
<label for="openSidebarMenu" class="sidebarIconToggle">
    <div class="spinner diagonal part-1"></div>
    <div class="spinner horizontal"></div>
    <div class="spinner diagonal part-2"></div>
</label>
<div id="sidebarMenu">
    <ul class="sidebarMenuInner" id="treeview">
       <li data-value="accueil" id="accueil" class="menuProduits"><a href="{{ path('home_index') }}" target="_self">Accueil</a></li>
        <li data-value="nosPains" id="nosPains" class="menuProduits"><a  href="{{ path('nos_produit_pain') }}" target="_self">Nos Pains</a></li>
        <li data-value="nosVIennoiseries" id="nosViennoiseries" class="menuProduits"><a  href="{{ path('nos_produit_viennoiserie') }}" target="..."target="_self">Nos Viennoiseries</a></li>
        <li data-value="nosCakes" id="nosCakes" class="menuProduits"><a  href="{{ path('nos_produit_cake') }}" target="_self">Nos Cakes</a></li>
        <li data-value="divers" id="divers" class="menuProduits"><a  href="{{ path('nos_produit_diver') }}" target="_self">Divers</a></li>
    </ul>
     <img src="/img/boulangerieBriceLogo_2.png" class="mt-5 mg-fluid float-left customLogoNous img-thumbnail">
</div> 

<div class="container text-center  mt-4 mb-4"><h1 class="rubriqueTitle">Nos Divers</h1></div>
<div class="container ">
    <div class="row d-flex flex-row">
        <div class="col-md-4 mb-4">
            <div class="card  customBorderCardProduit position-relative" style="width: 18rem;">
            <img class="card-img-top" src="/img/boulangerieBriceCake.jpg" alt="Card image cap">
                <div class="card-body customColorBody">
                   <h5 class="card-title lola">Diver</h5>
                    <p class="card-text">un très bon pain au chocolat.</p>
                    <div class="row">
                         <div class="col-md-6 col-sm-6 mb-3 text-center col-xs-6 mb-3 text-center ">
                            <button type="button" class="btn btn-secondary  allergeneShow">Allergènes</button>  
                            <ul class="typeAllergene position-absolute" >
                                {% for allergene in produit.allergene %}
                                <li >{{ allergene.type }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <span class="mousseOver"><i  class="fa fa-info-circle fa-2x" aria-hidden="true"></i></span>
                            <ul class="disponibilite" id="dispo">
                                <li class="text-center">Marquettes-Lez-Lille</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>           
        </div>
        <div class="col-md-4 mb-4">
            <div class="card  customBorderCardProduit" style="width: 18rem;">
            <img class="card-img-top" src="/img/boulangerieBriceCake.jpg" alt="Card image cap">
                <div class="card-body customColorBody">
                   <h5 class="card-title lola">Croissantt</h5>
                    <p class="card-text">un très bon pain au chocolat.</p>
                    <div class="row">
                        <div class="col-md-6">
                             <button type="button" class="btn customColorAllergenes" data-toggle="tooltip" data-placement="bottom" title="Iode, Moutarde">
                             Allèrgenes
                            </button  >
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <span class="mousseOver"><i  class="fa fa-info-circle fa-2x" aria-hidden="true"></i></span>
                            <ul class="disponibilite" id="dispo">
                                <li class="text-center">Marquettes-Lez-Lille</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>           
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class='jumbotron'>
    {% for allergene in allergenes %}
        <span> {{ allergene.id }} </span>
        <span> {{ allergene.type }} </span>

    {% endfor %}
    </div>
</div>
<footer class="container-fluid">
    <p class="text-light text-center mt-3">© Boulangerie Brice 2020</p>
</footer>
