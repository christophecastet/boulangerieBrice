 {% extends 'base.html.twig' %}
    {% block title %}Nos Cakes{% endblock %}
 {% block stylesheets %}
        <meta charset="UTF-8">
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico"/>
       
            <link href="{{ asset('/css/app.css') }}" type="text/css" rel="stylesheet">
            <link href="{{ asset('/css/styles.css') }}" type="text/css" rel="stylesheet">
            <link href="{{ asset('/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
            <link rel="stylesheet" href="{{ asset('/font-awesome/css/font-awesome.min.css') }}">
            
            <meta name="viewport" content="width=device-width, initial-scale=1">
            
     
       
        <script src="{{ asset('jquery/jquery-3.4.1.min.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="{{ asset('bootstrap/dist/js/bootstrap.min.js') }}"></script>
   {% endblock %}
 
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="header"></div>
<input type="checkbox" class="openSidebarMenu" id="openSidebarMenu" style="display:none">
<label for="openSidebarMenu" class="sidebarIconToggle">
    <div class="spinner diagonal part-1"></div>
    <div class="spinner horizontal"></div>
    <div class="spinner diagonal part-2"></div>
</label>
<div id="sidebarMenu">
    <ul class="sidebarMenuInner" id="treeview">
        <li data-value="accueil" id="accueil" class="menuProduits"><a href="{{ path('home_index') }}" target="_self">Accueil</a></li>
        <li data-value="nosPains" id="nosPains" class="menuProduits"><a  href="{{ path('nos_produit_pain') }}" target="_self">Nos Pains</a></li>
        <li data-value="nosVIennoiseries" id="nosViennoiseries" class="menuProduits"><a  href="{{ path('nos_produit_viennoiserie') }}" target="_self">Nos Viennoiseries</a></li>
        <li data-value="nosCakes" id="nosCakes" class="menuProduits"><a  href="{{ path('nos_produit_cake') }}" target="_self">Nos Cakes</a></li>
        <li data-value="divers" id="divers" class="menuProduits"><a  href="{{ path('nos_produit_diver') }}" target="_self">Divers</a></li>
    </ul>
    <img src="/img/boulangerieBriceLogo_2.png" class="mt-5 mg-fluid float-left customLogoNous img-thumbnail">
</div> 

<div class="container text-center  mt-4 mb-4"><h1 class="rubriqueTitle">Nos Cakes</h1></div>
<div class="container ">
    <div class="row d-flex flex-row">
        {% for produit in produits %}
        {% if produit.famille.type == 'Cakes' %}
        <div class="col-md-4 mb-4">
            <div class="card  customBorderCardProduit position-relative" style="width: 18rem;">
            <img class="card-img-top sizeProduitDisplay" src="/img/products/{{produit.fileName}}" alt="Card image cap ">
                <div class="card-body customColorBody pb-5">
                    <h5 class="card-title lola">{{produit.nom}}</h5>
                    <p class="card-text">{{produit.designation}}<p>
                    <div class="row">
                        <div class="col-md-6 col-sm-6 mb-3 text-center col-xs-6 mb-3 text-center ">
                            <button type="button" class="btn btn-secondary  allergeneShow">Allergènes</button>  
                            <ul class="typeAllergene position-absolute" >
                                {% for allergene in produit.allergene %}
                                <li >{{ allergene.type }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-md-6 text-center col-sm-6 col-xs-6 ">
                            <span id="dispo_{{produit.id}}" class="mousseOver h-100 mt-1"><i  class="fa fa-info-circle fa-2x" aria-hidden="true"></i></span>
                            <ul class="disponibilite">
                                 {% for magasin in produit.magasin %}
                                <li class="text-center fontSizeShop">{{ magasin.nom }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    
                </div>
            </div>           
        </div>
        {% endif %}
        {% endfor %}
    </div>
</div>
<footer class="container-fluid">
    <p class="text-light text-center mt-3">© Boulangerie Brice 2020</p>
</footer>

{% endblock %}
{% block javascripts %}
         <script src="{{ asset('/js/scriptProduit.js') }}"></script>
         
{% endblock %}

